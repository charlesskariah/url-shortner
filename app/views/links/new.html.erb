<%= form_for @link do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@link.errors.count, "error") %> prohibited
        this link from being shortened:
      </h2>
      <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :outgoing_url %><br>
    <%= f.text_field :outgoing_url %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>